<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tarea.edd.recuperacion.VistaCorreo">

    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/spCorreo"
        android:background="#7b216989"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="179dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="DOMINIOS" />

    <Spinner
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:id="@+id/spCategoria"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:layout_above="@+id/spCorreo"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText"
        android:text="CORREOS" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESCOGER"
        android:id="@+id/btnCategoria"
        android:layout_below="@+id/spCategoria"
        android:layout_alignRight="@+id/spCorreo"
        android:layout_alignEnd="@+id/spCorreo" />
</RelativeLayout>
